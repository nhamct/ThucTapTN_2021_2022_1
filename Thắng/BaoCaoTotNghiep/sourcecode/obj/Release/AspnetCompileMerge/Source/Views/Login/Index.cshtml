
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Đăng nhập hệ thống | DUE</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <link href="~/Assets/Client/login/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Assets/Client/login/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="~/Assets/Client/login/blue.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><img src="~/Assets/Client/img/LOGO9.png" alt="Images Logo" style="width: 220px"></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <div class="col-xs-12">
                @if (TempData["error_login"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["error_login"]
                    </div>
                }

            </div>
            <p class="login-box-msg">Đăng nhập hệ thống</p>
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#sinhvien">Sinh viên</a></li>
                <li><a data-toggle="tab" href="#giaovien">Giáo viên</a></li>
                <li><a data-toggle="tab" href="#quantrivien">Quản trị viên</a></li>
            </ul>

            <div class="tab-content">
                <div id="sinhvien" class="tab-pane fade in active">
                    @using (Html.BeginForm("Login_SinhVien", "Login", FormMethod.Post))
                    {
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="MaSV" placeholder="Nhập mã sinh viên" required />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control" name="MatKhau" placeholder="Nhập mật khẩu" required />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }

                </div>
                <div id="giaovien" class="tab-pane fade">
                    @using (Html.BeginForm("Login_GiaoVien", "Login", FormMethod.Post))
                    {
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="MaGV" placeholder="Nhập mã giáo viên" />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control" name="MatKhau" placeholder="Nhập mật khẩu" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }

                </div>
                <div id="quantrivien" class="tab-pane fade">
                    @using (Html.BeginForm("Login_GiaoVien", "Login", FormMethod.Post))
                    {
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="MaGV" placeholder="Tài khoản quản trị viên" />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control" name="MatKhau" placeholder="Nhập mật khẩu" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }

                </div>
            </div>
        </div>


    </div>
    <!-- /.login-box-body -->
    <!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Assets/Client/login/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/Assets/Client/login/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Assets/Client/login/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function() {
            $('input').iCheck({
                        checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>

</html>